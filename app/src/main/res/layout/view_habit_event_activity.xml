<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/habit_event_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/habit_event_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="" />
    <TextView
        android:id="@+id/habit_event_reason"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="" />
    <TextView
        android:id="@+id/habit_event_date_start"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="" />
    <TextView
        android:id="@+id/habit_event_date_complete"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="" />
    <TextView
        android:id="@+id/habit_event_finished"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

</LinearLayout>