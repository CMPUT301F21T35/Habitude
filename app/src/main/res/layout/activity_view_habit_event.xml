<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorOnPrimary"
        android:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/habit_event_finished"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_check_circle_24"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:contentDescription="Finished" />

            <ImageView
                android:id="@+id/habit_event_not_finished"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_cancel_24"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:contentDescription="Not finished" />

            <TextView
                android:id="@+id/habit_event_date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/habit_event_geolocation"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/habit_event_Photo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/habit_event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:textColor="#333"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/habit_event_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>